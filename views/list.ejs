<%- include('header') -%> 

<div class="box" id="heading">
	<h1><%= listTitle %></h1>
</div>

<div class="box">

	<% newTask.forEach(function(task){ %>

		<form class="item" action="/delete" method="post">
			<div class="item">
				<input type="checkbox" onchange="this.form.submit()" value="<%= task._id %> " name="isChecked" />
				<p><%= task.name %></p>
			</div>
			<input type="hidden" name="listName" value="<%= listTitle %>">
		</form>
		<% }); %>

	<form action="/" method="post">
		<input type="text" name="item" placeholder="New Item" required />
		<button type="submit" name="list" value= <%= listTitle %> >+</button>
	</form>
</div>

<%- include('footer') -%> 